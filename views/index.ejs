<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/styles.css">
  <title><%= title %></title>
</head>
<body>
  <h1>Message Board</h1>
  <ul>
    <% messages.forEach(function(message){ %>
      <li>  <strong><%= message.user %>:</strong> <%= message.text %> 
        <em>(<%= message.added.toLocaleString() %>)</em>
        <a href="/messages/<%= messages.indexOf(message) %>">Open</a></li>
    <% }); %>
  </ul>
  <a href="/new">Add a new message</a>
</body>
</html>
